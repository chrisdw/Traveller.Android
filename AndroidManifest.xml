        </activity>
        <activity android:name=".LanguageConfigurationActvity" >
        </activity>
        <activity
            android:name=".LanguageActivity"
            android:icon="@drawable/imperial_sunburst"
            android:label="@string/act_language" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WordDisplayActivity" >
        </activity>
        <activity
            android:name=".EncounterConfigurationActivity"
            android:icon="@drawable/imperial_sunburst"
            android:label="@string/act_encounter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EncounterDisplayActivity" >
        </activity>
        <activity android:name="com.lamerman.FileDialog" >
        </activity>
